<html>
    <head>
        <title>Contact Julian</title>
        <link rel="stylesheet" href="/style.css" type="text/css">
    </head>

    <body>
        <div class="contact-container">
            <%- include('header') %>
            <div class="contact-main" >
                <div id="contact-banner">
                    <span>Let's work together</span>
                </div>
                <form id="contact" action="/thanks" method="post">
                    <div class="mb-3 row">
                        <label class="col-sm col-form-label" for="name">Name:</label>
                        <div class="col-sm-9">
                            <input class="form-control" name="name" type="text" id="firstName" required>
                        </div>
                    </div>
                
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label" for="email">Email:</label>
                        <div class="col-sm-10">
                            <input class="form-control" name="email" type="text" id="email" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <textarea name="text" class="form-control"></textarea>
                    </div>
                    
                    <input type="submit" class="btn btn-primary" />
                </form>
            </div>
        </div>
    

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </body>
</html>